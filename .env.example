# Firebase Configuration
# Get these values from your Firebase Console (https://console.firebase.google.com)
# Project Settings > General > Your Apps > Web App
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Emulator Configuration (for local development)
# These settings enable Firebase emulators for local development
# Set VITE_USE_FIREBASE_EMULATOR=false to use production Firebase
VITE_USE_FIREBASE_EMULATOR=true
VITE_AUTH_EMULATOR_HOST=127.0.0.1:9099
VITE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
VITE_FIREBASE_EMULATOR_UI_PORT=4000
VITE_FIREBASE_EMULATOR_DEBUG=true 